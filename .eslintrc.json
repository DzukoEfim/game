{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "camelcase": "off",
        "indent": ["error", 4],
        "import/prefer-default-export": "off",
        "no-restricted-syntax": "error" ,
        "guard-for-in": "error",
        "no-extend-native": "error",
        "max-classes-per-file": "error",
        "class-methods-use-this": "error",
        "no-underscore-dangle": "error",
        "no-plusplus": "error",
        "max-len": ["error", { "code": 140 }],
        "no-unused-vars": "error",
        "no-continue": "error",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
        ],
        "lines-between-class-members": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"],
                "moduleDirectory": ["src", "node_modules"]
            }
        }
    }
}
